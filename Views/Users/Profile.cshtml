@using System.Security.Claims;
@model List<UserVideoGameModel>


<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-content">
                <!-- ***** Banner Start ***** -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="main-profile ">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="main-info header-text">

                                        <h4>Username: @User.FindFirst(ClaimTypes.Name).Value</h4>
                                        <p>Email: @User.FindFirst(ClaimTypes.Email).Value</p>
                                    </div>
                                </div>
                                <div class="col-lg-6 align-self-center">
                                    <ul>
                                        <li>Games Libary <span>@ViewData["VIDEOGAMESNUMBER"]</span></li>
                                        <li>Most Played <span>@ViewData["MOSTPLAYED"]</span></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (Model.Count > 0)
{
    <div class="gaming-library profile-library">
        <div class="col-lg-12">
            <div class="heading-section">
                <h4><em>Your Gaming</em> Library</h4>
            </div>
                    @foreach(var game in Model){
                    <div class="item">
                        <ul>
                        <li><img src="~/images/@game.ImageName" alt="@game.ImageName" class="templatemo-item"></li>
                        <li><h4>Name</h4><span>@game.Name</span></li>
                        <li><h4>Genre</h4><span>@game.Genre</span></li>
                        <li><h4>Hours Played</h4><span>@game.PlayTimeHours</span></li>
                        <li><h4>Status</h4><span>@game.status</span></li>
                        <li><div class="main-border-button border-no-active"><a asp-action="Details"
                        asp-controller="Dashboard" asp-route-id="@game.VideoGameId">Details</a></div></li>
                    
                        </ul>
                    </div>
                    }
                  
        </div>
    </div>

}else{

    <div class="gaming-library profile-library">
        <div class="col-lg-12">
            <div class="heading-section">
                <h4>Your Library is empty</h4>
            </div>
        </div>
    </div>
}






